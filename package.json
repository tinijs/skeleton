{
  "name": "app",
  "version": "0.0.3",
  "description": "The base structure of a TiniJS app/lib.",
  "author": "TiniJS",
  "homepage": "https://tinijs.dev",
  "license": "MIT",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "targets": {
    "main": false
  },
  "main": "public-api.js",
  "typings": "public-api.d.ts",
  "files": [
    "app",
    "assets",
    "themes",
    "styles",
    "services",
    "components",
    "pages",
    "layouts",
    "helpers",
    "consts",
    "vendor",
    "public-api.js",
    "public-api.d.ts",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc",
    "dev": "tini dev",
    "lint": "gts lint",
    "test": "tini test",
    "build": "tini build",
    "preview": "tini preview",
    "build:lib": "npm run compile",
    "ci": "npm run lint && npm run test && npm run build && npm run build:lib"
  },
  "dependencies": {
    "@tinijs/core": "0.0.3",
    "@tinijs/meta": "0.0.3",
    "@tinijs/router": "0.0.3",
    "@tinijs/store": "0.0.3",
    "lit": "^2.6.0"
  },
  "devDependencies": {
    "@tinijs/cli": "^0.0.3",
    "gts": "^4.0.0",
    "typescript": "~4.9.4"
  }
}
